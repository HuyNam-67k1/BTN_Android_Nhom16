<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF654">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="241dp"
        android:layout_height="111dp"
        android:layout_marginStart="85dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_dk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="138dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="138dp"
        android:text="ĐĂNG KÝ"
        android:textColor="#4A5CFC"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <EditText
        android:id="@+id/dk_tenNguoiDung"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Tên người dùng"
        android:inputType="text"
        android:textColor="#4A5CFC"
        android:textColorHighlight="#4A5CFC"
        android:textColorHint="#4A5CFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dk" />

    <EditText
        android:id="@+id/dk_taiKhoan"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Tài khoản"
        android:inputType="textLongMessage"
        android:textColor="#4A5CFC"
        android:textColorHighlight="#4A5CFC"
        android:textColorHint="#4A5CFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dk" />

    <EditText
        android:id="@+id/dk_xacNhanMatKhau"
        android:layout_width="342dp"
        android:layout_height="53dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Xác nhận mật khẩu"
        android:inputType="textPassword"
        android:textColor="#4A5CFC"
        android:textColorHighlight="#4A5CFC"
        android:textColorHint="#4A5CFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dk_matKhau" />

    <EditText
        android:id="@+id/dk_matKhau"
        android:layout_width="342dp"
        android:layout_height="51dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="35dp"
        android:ems="10"
        android:hint="Mật khẩu"
        android:inputType="textPassword"
        android:textColor="#4A5CFC"
        android:textColorHighlight="#4A5CFC"
        android:textColorHint="#4A5CFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dk_taiKhoan" />

    <Button
        android:id="@+id/btn_dangKy"
        android:layout_width="343dp"
        android:layout_height="66dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:backgroundTint="#4A5CFC"
        android:text="ĐĂNG KÝ"
        android:background="@drawable/round_btn"
        android:textColor="#FDF654"
        android:textSize="30dp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dk_xacNhanMatKhau" />

    <TextView
        android:id="@+id/dn_google"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="61dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="60dp"
        android:drawableLeft="@drawable/google1"
        android:drawablePadding="10dp"
        android:text="ĐĂNG NHẬP BẰNG GOOGLE"
        android:textColor="#4A5CFC"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dangKy" />

    <TextView
        android:id="@+id/txtbanchuacotk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="132dp"
        android:text="Bạn đã có tài khoản?"
        android:textColor="#4A5CFC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dn_google" />

    <Button
        android:id="@+id/btn_dangNhapNgay"
        android:layout_width="231dp"
        android:layout_height="47dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="#FDF654"
        android:text="ĐĂNG NHẬP NGAY"
        android:background="@drawable/round_btn"
        android:textColor="#4200FF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtbanchuacotk" />

    <ImageButton
        android:id="@+id/btn_conMatXacNhanMK"
        android:layout_width="48dp"
        android:layout_height="31dp"
        android:layout_marginBottom="12dp"
        android:background="#FDF654"
        app:layout_constraintBottom_toBottomOf="@+id/dk_xacNhanMatKhau"
        app:layout_constraintEnd_toEndOf="@+id/dk_xacNhanMatKhau"
        app:layout_constraintHorizontal_bias="0.982"
        app:layout_constraintStart_toStartOf="@+id/dk_xacNhanMatKhau"
        app:srcCompat="@drawable/pass" />

    <ImageButton
        android:id="@+id/btn_conMatMatKhau"
        android:layout_width="49dp"
        android:layout_height="41dp"
        android:background="#FDF654"
        app:layout_constraintEnd_toEndOf="@+id/dk_matKhau"
        app:layout_constraintHorizontal_bias="0.983"
        app:layout_constraintStart_toStartOf="@+id/dk_matKhau"
        app:layout_constraintTop_toTopOf="@+id/dk_matKhau"
        app:srcCompat="@drawable/pass" />

</androidx.constraintlayout.widget.ConstraintLayout>